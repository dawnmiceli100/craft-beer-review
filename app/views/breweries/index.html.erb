<%= render "shared/content_title", title: "Craft Breweries" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Brewery</th>
      <th></th>
    </tr>
  </thead>
  <tbody>    
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.name %></td>
        <td><%= link_to "see beers", brewery_path(brewery), class: "btn btn-small btn-info"%></td>
      </tr>
    <% end %>
  </tbody>  
</table>  

<div class="row">
  <div class="paginator">
    <%= paginate @breweries %>
  </div>
</div>    

<%= link_to "Add a Brewery", new_brewery_path, class: "btn btn-success" %>