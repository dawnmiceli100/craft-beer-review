<table class="table table-striped table-hover">
  <thead>
    <tr> 
      <th>Brewery</th>
      <th>Name</th>
      <th>Style</th>
      <th>Rating</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>    
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.brewery.name %></td>
        <td><%= beer.name %></td>
        <td><%= beer.style.name %></td>
        <td><%= beer.average_rating %></td>
        <td><%= link_to "read reviews", beer_path(beer), class: "btn btn-small btn-info"%></td>
        <td><%= link_to "add a review", new_beer_review_path(beer), class: "btn btn-small btn-success"%></td>
      </tr>
    <% end %>
  </tbody>  
</table>  
