<%= render "shared/content_title", title: "Craft Beer Styles" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Style</th>
      <th></th>
    </tr>
  </thead>
  <tbody>    
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
        <td><%= link_to "see beers", style_path(style), class: "btn btn-small btn-info"%></td>
      </tr>
    <% end %>
  </tbody>  
</table>  

<%= link_to "Add a Style", new_style_path, class: "btn btn-success" %>